<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmad.belajarapi.MainActivity">

    <EditText
        android:id="@+id/caribox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Search Recipe Here!"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listResep"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        app:layout_constraintTop_toBottomOf="@+id/caribox" />

    <Button
        android:onClick="prosedurcari"
        android:id="@+id/cari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari"
        app:layout_constraintStart_toEndOf="@+id/caribox"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
